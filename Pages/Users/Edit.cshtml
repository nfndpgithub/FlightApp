@page
@model vezba.Pages.Users.EditModel
@{
	ViewData["Title"] = "Edit user";
}
<h2>Edit user</h2>
@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}
<form method="post">
	<input type="hidden" name="id" value="@Model.user.id ">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.user.name">

		</div>

	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Password</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="password" value="@Model.user.password">

		</div>

	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Role</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="role" value="@Model.user.role">

		</div>

	</div>
	@if (Model.successMessage.Length > 0) {
			<div class="row mb-3">
			

				<div class="col-sm-9">
				<div class='alert alert-success alert-dismissible fade show' role='alert'>
				<strong>@Model.successMessage</strong>
					<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
				</div>
				</div>
				</div>
}
	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>

		</div>
		<div class="col-sm-3 d-grid">
			<a href="/Users" class="btn btn-outline-primary" role="button">cancel</a>

		</div>

	</div>
</form>